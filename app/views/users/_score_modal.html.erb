<div class='score-container'>
  <div class="modal fade" id="scoreModal" tabindex="-1" role="dialog" aria-labelledby="scoreModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
      
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="scoreModalLabel">MATCH SCORE</h4>
        </div>

        <div class="modal-body">
          <img src='/assets/score.jpg' alt='score' id='score-img'>
          <div class='score-sets'> 
            <div class='set'>
              <label>SET 1</label>
              <input type='number' name='games1-local' min='0' max='7' pattern='[0-7]{1}'>
              <input type='number' name='games1-visit' min='0' max='7' pattern='[0-7]{1}'>
            </div>
            <div class='set'>
              <label>SET 2</label>
              <input type='number' name='games2-local' min='0' max='7' pattern='[0-7]{1}'>
              <input type='number' name='games2-visit' min='0' max='7' pattern='[0-7]{1}'>
            </div>
            <div class='set'>
              <label>SET 3</label>
              <input type='number' name='games3-local' min='0' max='7' pattern='[0-7]{1}'>
              <input type='number' name='games3-visit' min='0' max='7' pattern='[0-7]{1}'>
            </div>
            <div class='set'>
              <label>SET 4</label>
              <input type='number' name='games4-local' min='0' max='7' pattern='[0-7]{1}'>
              <input type='number' name='games4-visit' min='0' max='7' pattern='[0-7]{1}'>
            </div>
            <div class='set'>
              <label>SET 5</label>
              <input type='number' name='games5-local' min='0' max='7' pattern='[0-7]{1}'>
              <input type='number' name='games5-visit' min='0' max='7' pattern='[0-7]{1}'>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type='button' class='btn btn-default' data-dismiss='modal'>Close</button>
          <button id="submitScore" type="submit" class='btn btn-primary'>Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>