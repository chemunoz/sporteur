<h1>USER PROFILE</h1>

<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>

<% if current_user.id==@user.id %>
  <a href="<%= user_matches_path(current_user) %>" class="btn btn-success" data-hook="my-matches">MY MATCHES</a>
  <a href="<%= new_user_match_path(current_user.id) %>" class="btn btn-success" data-hook="create-match">CREATE MATCH</a>

  <a href="<%= edit_user_registration_path %>" class="btn btn-success">EDIT PROFILE</a>
<% end %>