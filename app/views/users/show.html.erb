<div class="row">
  <div class="col-xs-12">
    <h1>USER PROFILE</h1>
  </div>
</div>

<div class="row profile-container center-xs">
  <div class="col-xs-3">
    <%= image_tag @user.avatar.url(:medium), class: 'profile-avatar-index' %>
  </div>

  <div class="col-xs-6 profile">

    <p class="sporteur-form-control">Name: <%= @user.name %></p>
    <p class="sporteur-form-control">Height: <%= @user.height %></p>
    <p class="sporteur-form-control">Weight: <%= @user.weight %></p>
    <p class="sporteur-form-control">Hand-Orientation: <%= @user.hand_orientation %></p>
    <p class="sporteur-form-control">NTRP (National Tennis Rating Program): <%= @user.ntrp %></p>
    <% if current_user %>
      <% if current_user==@user %>      
        <a href="<%= new_user_match_path(current_user.id) %>" class="btn btn-success"
         data-hook="create-match">CREATE MATCH</a>
        <a href="<%= edit_user_registration_path %>" class="btn btn-success">EDIT PROFILE</a>
      <% end %>
    <% end %>
  </div>
  
  <div class="col-xs-3">
    <div id="chart"></div>
    </div>
</div>




<% if current_user===@user %>
    <div class="row profile-container">
      <div class="col-xs-12 profile">
        <%= render 'user_matches' %>
      </div>
    </div>
    <div class="row profile-container center-xs">
      <div class="col-xs-10 profile">
        <%= render 'user_statistics' %>
      </div>
    </div>
<% end %>